<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_lay_rooms_header_for_select"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/relHeaderCancelAndSaveForSelectRooms"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/btn_cancel_hotels_rooms_for_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/flights__cancel"
            android:layout_alignParentLeft="true"
            android:padding="12dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotels_guests_per_room"
            android:textColor="@color/GeneralAppHeaderTitle_text"
            android:textSize="17sp"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/btn_save_hotels_rooms_original_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/flights__confirm"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:layout_marginTop="3dp" />

    </RelativeLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hotels_guests_per_room"
        android:background="@color/magenta"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/magentaHeaderRooms" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/relHeaderCancelAndSaveForSelectRooms"
        android:src="@drawable/separator"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:contentDescription="Divider" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/GuestPerRoomDescription_backgroung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hotels_room_description"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/GuestPerRoomDescription_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

</LinearLayout>