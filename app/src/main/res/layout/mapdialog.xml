<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.allem.alleminmotion.visacheckout.utils.CircularImageView
            android:id="@+id/map_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/plasholder_75"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <com.allem.alleminmotion.visacheckout.utils.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider Name: "
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <com.allem.alleminmotion.visacheckout.utils.MyTextView
                    android:id="@+id/map_providername"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <com.allem.alleminmotion.visacheckout.utils.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Name: "
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <com.allem.alleminmotion.visacheckout.utils.MyTextView
                    android:id="@+id/map_servicename"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>