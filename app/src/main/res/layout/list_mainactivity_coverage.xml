<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/allem_gray_extra_light">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_1"
            android:divider="@drawable/separator_gray">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Repatriating_remains"
                    android:id="@+id/title_coverage"
                    android:textAlignment="center"
                    android:textColor="@color/com_visa_checkout_gray"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:id="@+id/row_value"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/currency"
                        android:id="@+id/id_usd"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/id_value_coverage1"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView25"
            android:layout_below="@+id/ll_header"
            android:src="@drawable/separator_gray"
            android:contentDescription="Divider" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_2"
            android:background="@color/white"
            android:divider="@drawable/separator_gray">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/medical_expenses"
                    android:id="@+id/textView48"
                    android:textAlignment="center"
                    android:textColor="@color/com_visa_checkout_gray"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:id="@+id/linearLayout5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/currency"
                        android:id="@+id/textView49"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/id_value_coverage2"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView26"
            android:layout_below="@+id/ll_header"
            android:src="@drawable/separator_gray"
            android:contentDescription="Divider" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_3"
            android:divider="@drawable/separator_gray">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/emergency_transfer"
                    android:id="@+id/textView51"
                    android:textAlignment="center"
                    android:textColor="@color/com_visa_checkout_gray"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:id="@+id/linearLayout6"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/currency"
                        android:id="@+id/textView52"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/id_value_coverage3"
                        android:layout_weight="0.5"
                        android:textAlignment="center"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView27"
            android:layout_below="@+id/ll_header"
            android:src="@drawable/separator_gray"
            android:contentDescription="Divider" />

    </LinearLayout>
</LinearLayout>