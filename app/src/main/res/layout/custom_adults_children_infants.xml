<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center" >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_adults"
            android:textSize="13sp"
            android:textColor="@color/PersonSelectorItemDescriptionTitle_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_adults_description"
            android:layout_marginTop="-4dp"
            android:textColor="@color/PersonSelectorItemDescriptionSubTitle"
            android:textSize="10sp"/>

    </LinearLayout>

    <NumberPicker
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_marginLeft="6dp"
        android:id="@+id/adultsPicker">

    </NumberPicker>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_child"
            android:textSize="13sp"
            android:textColor="@color/PersonSelectorItemDescriptionTitle_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_child_description"
            android:layout_marginTop="-4dp"
            android:textColor="@color/PersonSelectorItemDescriptionSubTitle"
            android:textSize="10sp"/>

    </LinearLayout>

    <NumberPicker
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/childrenPicker"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_marginLeft="-16dp">

    </NumberPicker>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.2"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/PersonSelectorItemDescriptionTitle_text"
            android:text="@string/txt_lbl_infants"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_infants_description"
            android:textColor="@color/PersonSelectorItemDescriptionSubTitle"
            android:layout_marginTop="-4dp"
            android:textSize="9sp"/>

    </LinearLayout>

    <NumberPicker
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:id="@+id/infantsPicker">

    </NumberPicker>

</LinearLayout>
