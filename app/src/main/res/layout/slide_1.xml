<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalkThroughActivity">

    <!--  UPPER SCREENSHOT -->
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/walkthrough_01_es"
        android:id="@+id/imageView32"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/accept"
        android:adjustViewBounds="true"
        />
    <!-- </LinearLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView32"
        android:weightSum="3">

        <com.allegra.handyuvisa.utils.CustomizedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_walk_01"
            android:textColor="@color/WHITE_COLOR"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            app:font="@string/font_varela"
            android:id="@+id/title_walk" />

        <com.allegra.handyuvisa.utils.CustomizedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/walk_01"
            android:textColor="@color/WHITE_COLOR"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/text_walk"
            app:font="@string/font_muli_light"/>

        <com.allegra.handyuvisa.utils.CustomizedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IATAI"
            android:textColor="@color/WHITE_COLOR"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/powered_walk"
            app:font="@string/font_muli"/>

    </LinearLayout>


</RelativeLayout>