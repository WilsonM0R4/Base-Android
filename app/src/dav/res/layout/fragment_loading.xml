<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_call_body"
    android:background="@color/white"
    android:clickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_allegra_loader"
        android:id="@+id/iv_allegra"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_circle"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/run_animation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/loading_salmon"
        android:text="@string/txt_lbl_callwait"
        android:background="@android:color/transparent"
        android:id="@+id/tv_status_otc"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:layout_above="@+id/cancel_one_touch"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel_one_touch"
        android:id="@+id/cancel_one_touch"
        android:background="@drawable/round_corner_transparent_orange"
        android:checked="false"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/loading_salmon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel_one_touch"
        android:id="@+id/test"
        android:background="@drawable/round_corner_transparent_orange"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/loading_salmon"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_status_otc"
        />

</RelativeLayout>