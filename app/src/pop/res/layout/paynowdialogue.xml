<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/popup_bg_prefereddate"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/crop__ic_cancel"/>

        <Button
            android:id="@+id/btn_payment_nnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_wallet_balance"
            android:gravity="center"
            android:padding="15dp"
            android:text="PAY NOW"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/btn_payment_lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_wallet_balance"
            android:gravity="center"
            android:orientation="vertical">

            <Button

                android:id="@+id/btn_later"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="CASH AFTER SERVICE"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal|top"
                android:paddingBottom="2dp"
                android:text="Pay online when the job is done"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>